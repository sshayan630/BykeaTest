<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/music_item_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_placeholder_600px" />

        <TextView
            android:id="@+id/music_item_title_text"
            style="@style/MusicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/music_item_image"
            tools:text="@string/dummy_text_small" />

        <TextView
            android:id="@+id/music_item_author_text"
            style="@style/MusicAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_item_title_text"
            android:layout_toRightOf="@+id/music_item_image"
            tools:text="@string/dummy_text_small" />
   <TextView
            android:id="@+id/music_item_album_text"
            style="@style/MusicAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_item_author_text"
            android:layout_toRightOf="@+id/music_item_image"
            tools:text="@string/dummy_text_small" />

    </RelativeLayout>
</android.support.v7.widget.CardView>